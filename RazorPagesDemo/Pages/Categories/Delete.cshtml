@page
@model RazorPagesDemo.Pages.Categories.DeleteModel

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>

        <div class="row mb-3 p-1">
            <label class="p-0" asp-for="Category.Name"></label>
            <input class="form-control" asp-for="Category.Name" disabled />
        </div>

        <div class="row mb-3 p-1">
            <label class="p-0" asp-for="Category.DisplayOrder"></label>
            <input class="form-control" asp-for="Category.DisplayOrder" disabled />
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button class="btn btn-danger form-control" type="submit">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a class="btn btn-outline-secondary border form-control" asp-page="/Categories/Index">Back To List</a>
            </div>
        </div>
    </div>
</form>