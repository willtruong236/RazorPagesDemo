@page
@model RazorPagesDemo.Pages.Categories.IndexModel

<div class="container">
    <div class="row py-3">
        <div class="col-6">
            <h2 class="text-primary pt-2">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-page="/Categories/Create">Create New Category</a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Display Order</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model.Categories.OrderBy(u => u.DisplayOrder))
            {
                <tr>
                    <td>@category.Name</td>
                    <td>@category.DisplayOrder</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a class="btn btn-primary mx-2" asp-page="/Categories/Edit" asp-route-id="@category.Id">Edit</a>
                            <a class="btn btn-danger mx-2" asp-page="/Categories/Delete" asp-route-id="@category.Id">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>